<html lang="{{language}}">
  <head>
    <style>
      body { font-family: Arial, sans-serif; background-color: #f4f4f4; margin:
      0; padding: 0; color: #090909 } .email-container { background-color: #fff;
      padding: 20px; text-align: center; } .logo { max-width: 150px; margin: 0
      auto; } .otp-container { text-align: center; margin: 30px 0; } .otp-code {
      background-color: #f8f8f8; padding: 10px 20px; border-radius: 5px;
      font-size: 24px; font-weight: bold; } .footer { text-align: center; color:
      #888; font-size: 14px; margin-top: 30px;} h2 { margin-bottom: 0; }
    </style>
  </head>
  <body>
    <div class="email-container">
      <div class="logo">
        <img
          src="https://pegava.s3.sa-east-1.amazonaws.com/static/Logo.png"
          width="40"
          alt=""
        />
      </div>
      <h2>{{translate "verifyCode.verificationCode"}}</h2>
      <p>{{translate "verifyCode.yourCodeIs"}}:</p>
      <div class="otp-container">
        <span class="otp-code">{{otp}}</span>
      </div>
      <p>{{translate "verifyCode.codeWarning"}}</p>

      <div class="footer">
        <p>{{translate "verifyCode.thisEmailIsAutomated"}}</p>
        <p>{{translate "verifyCode.allRightsReserved" year=year}}</p>
      </div>
    </div>
  </body>
</html>